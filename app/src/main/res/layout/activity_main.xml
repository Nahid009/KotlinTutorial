<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#423939"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginBottom="70dp"
        >

        <EditText
            android:id="@+id/inputNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#292828"
            android:clickable="false"
            android:cursorVisible="true"
            android:focusable="true"
            android:padding="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="#F6F6F6"
            android:textSize="50sp"
            android:verticalScrollbarPosition="right">

        </EditText>

        <EditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:padding="10dp"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="#FFFFFF"
            android:textSize="25sp">

        </EditText>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
// Button Row 1
            <android.widget.Button
                android:id="@+id/buttonCleared"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="c"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/button00"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="00"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
// Button Row 2
            <android.widget.Button
                android:id="@+id/buttonPercent"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="%"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>


        </LinearLayout>
// Button Row 3
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            // Button Row 2
            <android.widget.Button
                android:id="@+id/buttonB"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:drawableTint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:drawableTop="@drawable/ic_baseline_backspace_24"
                android:paddingTop="25dp">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/buttonDot"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="."
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>


        </LinearLayout>
// Button Row 4
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            // Button Row 2
            <android.widget.Button
                android:id="@+id/buttonDivided"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="รท"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/buttonMultiple"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="*"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/buttonMinus"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/buttonPlus"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/buttonEqual"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#3B697E"
                android:gravity="center"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </android.widget.Button>


        </LinearLayout>


    </LinearLayout>



</RelativeLayout>





